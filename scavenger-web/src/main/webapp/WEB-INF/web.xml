<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.jaysan1292.groupproject.web.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>challenges</servlet-name>
        <servlet-class>com.jaysan1292.groupproject.web.servlets.ChallengeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkpoints</servlet-name>
        <servlet-class>com.jaysan1292.groupproject.web.servlets.CheckpointServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>paths</servlet-name>
        <servlet-class>com.jaysan1292.groupproject.web.servlets.PathServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>scavengerhunts</servlet-name>
        <servlet-class>com.jaysan1292.groupproject.web.servlets.ScavengerHuntServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>players</servlet-name>
        <servlet-class>com.jaysan1292.groupproject.web.servlets.PlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>teams</servlet-name>
        <servlet-class>com.jaysan1292.groupproject.web.servlets.TeamServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ajax</servlet-name>
        <servlet-class>com.jaysan1292.groupproject.web.servlets.AjaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>css</servlet-name>
        <servlet-class>com.jaysan1292.groupproject.web.servlets.CssServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>challenges</servlet-name>
        <url-pattern>/challenges</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkpoints</servlet-name>
        <url-pattern>/checkpoints</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>paths</servlet-name>
        <url-pattern>/paths</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>players</servlet-name>
        <url-pattern>/players</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>scavengerhunts</servlet-name>
        <url-pattern>/scavengerhunts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>teams</servlet-name>
        <url-pattern>/teams</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ajax</servlet-name>
        <url-pattern>/ajax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>css</servlet-name>
        <url-pattern>/css/application.css</url-pattern>
    </servlet-mapping>
</web-app>
